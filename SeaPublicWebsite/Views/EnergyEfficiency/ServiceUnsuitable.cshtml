@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.ServiceUnsuitableViewModel
@{
    ViewBag.Title = "Only available to homeowners in England and Wales";
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action($"{ViewBag.From}_Get", "EnergyEfficiency", new {reference = Model.Reference}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <div class="govuk-panel govuk-panel--confirmation sea-service-unsuitable">
            <h1 class="govuk-panel__title">
                Sorry...
            </h1>
            <div class="govuk-panel__body">
                This service currently can only provide advice for people who own their own home in England and Wales
            </div>
        </div>
        
        @if (Model.Country is Country.Scotland or Country.NorthernIreland)
        {
            <h2 class="govuk-heading-m">Other services that might be helpful to you</h2>

            @if (Model.Country is Country.Scotland)
            {
                <p class="govuk-body">
                    Visit <a href="https://www.homeenergyscotland.org/" target="_blank" class="govuk-link">Home Energy Scotland</a> to help you find ways to improve your property’s energy efficiency.
                </p>
            }
            else
            {
                <p class="govuk-body">
                    Visit <a href="https://www.nidirect.gov.uk/" target="_blank" class="govuk-link">NI Direct</a> to help you find ways to improve your property’s energy efficiency.
                </p>
            }
        }

    </div>
</div>
