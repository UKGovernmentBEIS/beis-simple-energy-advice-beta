@{
    ViewBag.Title = "Cookies on Improving your property's energy efficiency";
}

<div class="govuk-grid-row cookie-settings-page">
    <div class="govuk-grid-column-two-thirds">
        <form method="POST" action="@Url.Action("CookieSettingsPost", "Cookies")">
            @(Html.AntiForgeryToken())
            <h1 class="govuk-heading-xl">Cookies on Improving your property's energy efficiency</h1>
            <p class="govuk-body">Cookies are files saved on your phone, tablet or computer when you visit a website.</p>
            <p class="govuk-body">We use cookies to store information about how you use this service, such as the pages you visit.</p>

            <h2 class="govuk-heading-l">Cookie settings</h2>
            <p class="govuk-body">We use ?? types of cookie. You can choose which cookies you're happy for us to use.</p>
            <h3 class="govuk-heading-m">Strictly necessary cookies</h3>
            <p class="govuk-body">These essential cookies do things like:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>enable you to login to report your organisation's gender pay gap</li>
                <li>remember your progress through the service</li>
                <li>remember notifications you’ve seen so that we don’t show them again</li>
            </ul>
            <p class="govuk-body">They always need to be on.</p>
            <p class="govuk-body">
                <a href="@Url.Action("CookieDetails", "Cookies")" class="govuk-link">Find out more about cookies on the gender pay gap service</a>
            </p>

            <input type="submit" class="govuk-button" data-module="govuk-button" value="Confirm"/>

        </form>

    </div>
</div>