@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SeaPublicWebsite.Controllers
@model SeaPublicWebsite.Models.EnergyEfficiency.PrivateBetaViewModel

@await Html.GovUkHint(new HintViewModel
{
    Text = "Testing our service",
    Classes = "govuk-!-font-size-24 govuk-!-margin-bottom-0"
})

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Welcome to our new service
        </h1>

        <h2 class="govuk-heading-m">
            Please leave us feedback
        </h2>
        <p class="govuk-body">
            Our service is not finished and is still in development. 
            Your feedback will help us understand how well the service is working and what can be improved.
        </p>
        <p class="govuk-body">
            You can leave feedback at any time from the feedback link at the top of the page 
            or from the feedback section after you have completed the service.
        </p>

        <h2 class="govuk-heading-m">
            Your consent to accept cookies
        </h2>
        <p class="govuk-body">
            To support our research and improvement of the service, we need your consent to enable analytics cookies.
        </p>
        <p class="govuk-body">
            All data will be captured, stored, protected and processed according to legal requirements and obligations outlined 
            by the UK General Data Protection Regulation (GDPR) and the Data Protection Act 2018.
        </p>   
        <p class="govuk-body">
            You can read more about this on our 
            <a href=@Url.Action("PrivacyPolicy", "StaticPages")>privacy policy.</a>
        </p>

        <form method="post" action="@Url.Action(nameof(EnergyEfficiencyController.PrivateBeta_Post), "EnergyEfficiency")">
            @Html.AntiForgeryToken()
            @await Html.GovUkCheckboxFromBoolFor(
                m => m.HasAcceptedCookies,
                new LabelViewModel
                {
                    Text = "I consent to the use of analytics cookies while I am testing this service"
                })

            @await Html.GovUkButton(new ButtonViewModel
            {
                Type = "submit",
                Html = @<text>
                           Continue
                           <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                               <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
                           </svg>
                        </text>
            })
        </form>
    </div>
</div>