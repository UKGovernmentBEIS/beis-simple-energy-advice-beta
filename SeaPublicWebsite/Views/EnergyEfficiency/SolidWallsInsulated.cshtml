@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SeaPublicWebsite.BusinessLogic.Models.Enums

@model SeaPublicWebsite.Models.EnergyEfficiency.SolidWallsInsulatedViewModel
@{
    ViewBag.Title = "Solid Walls Insulated";
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = Model.BackLink,
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("SolidWallsInsulated_Post", "EnergyEfficiency", new {reference = Model.Reference})" method="post" novalidate>
            @Html.AntiForgeryToken()
            @(Html.HiddenFor(m => m.EntryPoint))
            
            @{
                Func<object, object> details = 
                    @<text>
                        <p class="govuk-body">
                            Solid walls are more common in pre-1930 buildings and these were typically built without insulation.
                        </p>
                        <p class="govuk-body">
                            If you have solid walls, it’s unlikely they are insulated. 
                        </p>
                     </text>;
                
                Func<object, object> epcHint = null;
                if (Model.Epc?.CavityWallsInsulated is not null)
                {
                    epcHint = 
                        @<p>
                            Your @Model.Epc?.InspectionDate Energy Performance Certificate suggests you have
                            <strong>
                                @(Model.Epc?.SolidWallsInsulated switch {
                                    SolidWallsInsulated.No => "uninsulated",
                                    SolidWallsInsulated.Some => "some insulated",
                                    SolidWallsInsulated.All => "insulated",
                                    _ => throw new ArgumentOutOfRangeException()})
                            </strong>
                            solid walls.
                        </p>;
                }
            }
            
            @(await Html.GovUkRadiosFor(m => m.SolidWallsInsulated,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <h1 class="govuk-fieldset__heading">
                                       Are your solid walls insulated?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                hintOptions: new HintViewModel
                {
                    Html = @<text>
                               <p class="govuk-body">
                                   Solid wall insulation may be installed internally, inside your home, or externally, on the outside walls.
                               </p>
                               
                               @await Html.GovUkDetails(new DetailsViewModel
                               {
                                   SummaryText = "Help me answer this question",
                                   Html = details
                               })
                               
                               @if (epcHint is not null)
                               {
                                   @await Html.GovUkInsetText(new InsetTextViewModel
                                   {
                                       Classes = "sea-epc-hint",
                                       Html = epcHint
                                   })
                               }
                            </text>
                    }))

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
            
        </form>
        
    </div>
</div>
