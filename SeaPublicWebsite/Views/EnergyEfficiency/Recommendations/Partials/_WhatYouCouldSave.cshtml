@using SeaPublicWebsite.BusinessLogic.Models.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@model SeaPublicWebsite.Models.EnergyEfficiency.SingleRecommendationDetailsViewModel

<div class="govuk-grid-row govuk-!-margin-left-0 govuk-!-margin-bottom-7 govuk-!-margin-top-6">
    @if (Model.GetCurrentPropertyRecommendation().Key != RecommendationKey.InstallHeatPump)
    {
        <div class="govuk-grid-column-full sea-yearly-savings govuk-!-margin-bottom-2">
            <span class="govuk-heading-s govuk-!-margin-bottom-0"><b>@SharedLocalizer["This could save up to"]</b></span>
            <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
                @SharedLocalizer["£AYearString", @Model.GetCurrentPropertyRecommendation().Saving]
            </h3>
            <span class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-margin-top-3"><b>@SharedLocalizer["Which adds up to"]</b></span>
            <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
                @SharedLocalizer["£OverLifetimeOfInstallationString", @Model.GetCurrentPropertyRecommendation().LifetimeSaving]
            </h3>
        </div>
    }
    <div class="govuk-grid-column-full sea-install-costs">
        <span class="govuk-heading-s govuk-!-margin-bottom-0"><b>@SharedLocalizer["This could cost"]</b></span>
        @if (Model.GetCurrentPropertyRecommendation().Key == RecommendationKey.InstallHeatPump)
        {
            <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
                @SharedLocalizer["PriceRangeForAnAirSourceHeatPumpString", "9500", "12000"]
            </h3>
            <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
                @SharedLocalizer["PriceRangeForAGroundSourceHeatPumpString", "12000", "37000"]
            </h3>
        }
        else
        {
            <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
                @SharedLocalizer["£RangeString", Model.GetCurrentPropertyRecommendation().MinInstallCost, Model.GetCurrentPropertyRecommendation().MaxInstallCost]
            </h3>
        }
    </div>
</div>