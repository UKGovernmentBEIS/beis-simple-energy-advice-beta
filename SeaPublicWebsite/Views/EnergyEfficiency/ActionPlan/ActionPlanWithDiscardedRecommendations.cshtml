@model SeaPublicWebsite.Models.EnergyEfficiency.YourSavedRecommendationsViewModel;

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
            Your Action Plan
        </h1>
        
        <p class="govuk-body">
            You told us that you don’t want to procceed with any of the reccomendations suggested to you. 
            There are still some options for you to consider.
        </p>
        
        @{ await Html.RenderPartialAsync("ActionPlan/Partials/AvailableSchemesOrGrantsPartial", Model); }
        @{ await Html.RenderPartialAsync("ActionPlan/Partials/LowCostMeasuresPartial", Model); }
        @{ await Html.RenderPartialAsync("ActionPlan/Partials/DiscardedRecommendationsPartial", Model); }
        
        <h2 class="govuk-heading-m">Still need help?</h2>
        <p class="govuk-body">
            You can find out more by visiting the
            <a href="https://energysavingtrust.org.uk/">Energy Saving Trust</a>
            website for other ways to save energy and reduce your bills.
        </p>
        
        @{ await Html.RenderPartialAsync("ActionPlan/Partials/ReturnToActionPlanPartial", Model); }
    </div>
</div>