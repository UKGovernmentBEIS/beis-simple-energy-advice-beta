@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.BungalowTypeViewModel
@{
    ViewBag.Title = "Bungalow type";
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action("PropertyType_Get", "EnergyEfficiency", new {reference = Model.Reference, change = Model.Change}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("BungalowType_Post", "EnergyEfficiency", new {reference = Model.Reference, change = Model.Change})" method="post" novalidate>
            
            @(await Html.GovUkRadiosFor(m => m.BungalowType,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <h1 class="govuk-fieldset__heading">
                                       What kind of bungalow do you have?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                radioHints: new Dictionary<BungalowType, HintViewModel>
                {
                    {
                        BungalowType.Detached,
                        new HintViewModel
                        {
                            Text = "A detached house does not share any of its walls with another house or building"
                        }
                    },
                    {
                        BungalowType.SemiDetached,
                        new HintViewModel
                        {
                            Text = "A semi-detached house is attached to one other house or building"
                        }
                    },
                    {
                        BungalowType.Terraced,
                        new HintViewModel
                        {
                            Text = "A mid-terrace house sits in the middle with a house or building on each side"
                        }
                    },
                    {
                        BungalowType.EndTerrace,
                        new HintViewModel
                        {
                            Text = "An end-terrace house sits at the end of a row of similar houses with one house attached to it"
                        }
                    },
                },
                hintOptions: new HintViewModel
                {
                    Html = @<text>
                               <details class="govuk-details" data-module="govuk-details">
                                   <summary class="govuk-details__summary">
                                       <span class="govuk-details__summary-text">
                                           Why do we need to know this?
                                       </span>
                                   </summary>
                                   <div class="govuk-details__text">
                                        <p class="govuk-body">
                                            Energy use varies between different buildings, particularly for heating.  
                                        </p>
                                        <p class="govuk-body">
                                            Some home improvements are only possible or appropriate for certain buildings.
                                        </p>
                                   </div>
                               </details>
                            </text>
                }
            ))

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
            
        </form>
        
    </div>
</div>
