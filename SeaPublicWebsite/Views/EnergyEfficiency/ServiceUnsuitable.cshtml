@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.BusinessLogic.Models.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResources> SharedLocalizer

@model SeaPublicWebsite.Models.EnergyEfficiency.ServiceUnsuitableViewModel
@{
    ViewBag.Title = @SharedLocalizer["Only available to homeowners in England and Wales"];
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
           {
               Text = @SharedLocalizer["Back"].Value,
               Href = Model.BackLink,
           })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <h1 class="govuk-heading-l">@SharedLocalizer["Sorry, this service isn't for you"]</h1>
        <p class="govuk-body">
            @SharedLocalizer["This service only provides advice for people who own their own home in England and Wales."]
        </p>
        <p class="govuk-body">
            @SharedLocalizer["For general energy efficiency advice and to find out ways to reduce your energy bill, visit"] <a href="https://energysavingtrust.org.uk/" target="_blank" class="govuk-link">@SharedLocalizer["the Energy Saving Trust"]</a> @SharedLocalizer["website"]
        </p>
        @if (Model.Country is Country.Scotland or Country.NorthernIreland)
        {
            <h2 class="govuk-heading-m">@SharedLocalizer["Other services that might be helpful to you"]</h2>

            @if (Model.Country is Country.Scotland)
            {
                <p class="govuk-body">
                    @SharedLocalizer["Visit"] <a href="https://www.homeenergyscotland.org/" target="_blank" class="govuk-link">@SharedLocalizer["Home Energy Scotland"]</a> @SharedLocalizer["to help you find ways to improve your property’s energy efficiency."]
                </p>
            }
            else
            {
                <p class="govuk-body">
                    @SharedLocalizer["Visit"] <a href="https://www.nidirect.gov.uk/" target="_blank" class="govuk-link">@SharedLocalizer["NI Direct"]</a> @SharedLocalizer["to help you find ways to improve your property’s energy efficiency."]
                </p>
            }
        }

    </div>
    <div class="govuk-grid-column-one-third">
        @await Html.PartialAsync("/Views/EnergyEfficiency/Partials/_AdditionalSupport.cshtml")
    </div>
</div>