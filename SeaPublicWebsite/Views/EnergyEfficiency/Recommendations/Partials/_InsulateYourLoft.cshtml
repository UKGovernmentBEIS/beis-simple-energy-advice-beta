@using GovUkDesignSystem.GovUkDesignSystemComponents
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@model SeaPublicWebsite.Models.EnergyEfficiency.SingleRecommendationDetailsViewModel;

@{
    Layout = "_Recommendation";
}

@section RecommendationBody
{
    <p class="govuk-body">
        @SharedLocalizer["Based on the information we have collected; it looks like you have no insulation in your loft. We recommend that you have your loft insulated, if possible, up to the recommended thickness of 300mm, or 12 inches."]
    </p>

    <p class="govuk-body">
        @SharedLocalizer["Adding insulation will help trap the heat inside your property so your heating doesn’t need to be on as much, and so could make a significant saving on your fuel bills."]
    </p>

    <p class="govuk-inset-text">
        @SharedLocalizer["If some of your loft is boarded so that you can store things up there you will either need to raise this boarding up and insulate underneath it, or leave that part of the loft without insulation."]
    </p>

    <p class="govuk-body govuk-!-margin-bottom-6">
        @SharedLocalizer["MoreInfoOnLoftInsulationOnEnergySavingTrustWebsiteString", "https://energysavingtrust.org.uk/advice/roof-and-loft-insulation/"]
    </p>
}

@section RecommendationSuitableFor
{
    <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-7">
        <li>
            @SharedLocalizer["You have a pitched (sloping) roof with an unheated loft space that someone could easily get into."]
        </li>
        <li>
            @SharedLocalizer["Your loft has no insulation"]
        </li>
        <li>
            @SharedLocalizer["If your loft is insulated, but you have less than the recommended amount (300mm or 12 inches thick) then it could still be worthwhile topping up your insulation"]
        </li>
    </ul>
}

@section RecommendationLifetime
{
    <p class="govuk-body">@SharedLocalizer["LoftInsulationExpectedToLastString", Model.GetCurrentPropertyRecommendation().Lifetime]</p>
}

@{
    Model.DisruptionTagViewModel = new TagViewModel
    {
        Classes = "govuk-tag--green",
        Text = SharedLocalizer["Minimal"].Value
    };

    Model.DurationTagViewModel = new TagViewModel
    {
        Classes = "govuk-tag--green",
        Text = SharedLocalizer["Less than a day"].Value
    };
}