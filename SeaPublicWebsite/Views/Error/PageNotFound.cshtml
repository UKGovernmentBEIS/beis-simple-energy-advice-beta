@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResources> SharedLocalizer

@{
    ViewBag.Title = @SharedLocalizer["Page not found - Home Energy Retrofit Advice - GOV.UK"];
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@SharedLocalizer["Page not found"]</h1>
        <p class="govuk-body">
            @SharedLocalizer["If you typed the web address, check it is correct."]
        </p>
        <p class="govuk-body">
            @SharedLocalizer["If you pasted the web address, check you copied the entire address."]
        </p>
        <p class="govuk-body">
            @SharedLocalizer["If the web address is correct or you selected a link or button, contact our digital support assistants if you need to speak to someone."]
        </p>
        <p class="govuk-body-l">
            @SharedLocalizer["Telephone"] <br/>
            <span class="sea-telephone"><strong>0800 444 202</strong></span>
        </p>
        <p class="govuk-body">
            @SharedLocalizer["Opening times:"]
        </p>
        <p class="govuk-body">
            <strong>
                @SharedLocalizer["Monday to Friday: 8am to 8pm"]<br>
                @SharedLocalizer["Saturday and Sunday: 9am to 5pm"]
            </strong>
        </p>
    </div>
</div>
