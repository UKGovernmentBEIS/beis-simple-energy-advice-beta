@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.OwnershipStatusViewModel
@{
    ViewBag.Title = "Ownership status";
}

@section BeforeMain {
    @await Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = Model.BackLink,
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("OwnershipStatus_Post", "EnergyEfficiency", new {reference =  Model.Reference})" method="post" novalidate>  
            @(Html.HiddenFor(m => m.EntryPoint))
              
            
            @(await Html.GovUkRadiosFor(m => m.OwnershipStatus,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <h1 class="govuk-fieldset__heading">
                                       Do you own your property?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                new HintViewModel
                {
                    Html = @<text>
                                <details class="govuk-details" data-module="govuk-details">
                                    <summary class="govuk-details__summary">
                                        <span class="govuk-details__summary-text">
                                            Why do we need to know this?
                                        </span>
                                    </summary>
                                    <div class="govuk-details__text">
                                        This service only provides advice to people who own their home.
                                    </div>
                                </details>
                            </text>
                }
            ))

            @(await Html.GovUkButton(new ButtonViewModel
            {
                Text = "Continue",
            }))
            
        </form>
        
    </div>
</div>
